	keywords = {notion, read, Boundary-layer dynamics, Heat \& moisture advection, Scaling surface fluxes, Surface heterogeneity},
	pages = {109452},
	file = {1-s2.0-S0168192323001442-main:/home/ptiengou/snap/zotero-snap/common/Zotero/storage/U8BAXAWV/1-s2.0-S0168192323001442-main.pdf:application/pdf;Full Text:/home/ptiengou/snap/zotero-snap/common/Zotero/storage/7JKZKL3W/1-s2.0-S0168192323001442-main.pdf:application/pdf;ScienceDirect Snapshot:/home/ptiengou/snap/zotero-snap/common/Zotero/storage/ZMPTKH4R/S0168192323001442.html:text/html},
