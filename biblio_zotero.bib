	author = {Lobera, G. and Besne, P. and Vericat, D. and López-Tarazón, J. A. and Tena, A. and Aristi, I. and Díez, J. R. and Ibisate, A. and Larrañaga, A. and Elosegi, A. and Batalla, R. J.},
	month = mar,
	year = {2015},
	pmid = {25474167},
	keywords = {notion, Hydrology, Dams, Ecosystem, Floods, Flow regulation, Geomorphic Status, Iberian rivers, Rivers, Spain, Water Movements},
	pages = {101--114},
}

