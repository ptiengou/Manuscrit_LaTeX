@article{lan_role_2024,
	title = {The {Role} of {Atmospheric} {Stabilities} and {Moisture} {Convergence} in the {Enhanced} {Dry} {Season} {Precipitation} over {Land} from 1979 to 2021},
	volume = {37},
	issn = {0894-8755, 1520-0442},
	url = {https://journals.ametsoc.org/view/journals/clim/37/9/JCLI-D-23-0287.1.xml},
