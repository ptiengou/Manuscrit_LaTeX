	keywords = {notion, Soil moisture, Atmosphere-land interaction, Feedback, Cloud resolving models, Convective-scale processes, Heat budgets/fluxes},
	file = {Full Text PDF:/home/ptiengou/snap/zotero-snap/common/Zotero/storage/N8T6M8AV/Froidevaux et al. - 2014 - Influence of the Background Wind on the Local Soil Moisture–Precipitation Feedback.pdf:application/pdf},
}

@article{rihani_isolating_2015,
