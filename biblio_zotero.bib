	pages = {4068--4076},
	file = {Full Text PDF:/home/ptiengou/snap/zotero-snap/common/Zotero/storage/RSRFWAHY/Keune et al. - 2018 - Human Water Use Impacts on the Strength of the Con.pdf:application/pdf},
